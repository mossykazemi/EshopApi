@model List<Customer>
@{
    ViewData["Title"] = "Home Page";
    int rowCount = 1;
}

<h2>
    <a asp-action="Create" class="btn btn-success">Add New Customer</a>
</h2>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Phone</th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@rowCount</td>
            <td>@item.FirstName</td>
            <td>@item.LastName</td>
            <td>@item.Email</td>
            <td>@item.Phone</td>
            <td>
                <a href="/Home/Edit/@item.CustomerId" class="btn btn-warning">Edit</a>
                <a href="/Home/Delete/@item.CustomerId" class="btn btn-danger">Delete</a>
            </td>
        </tr>
        rowCount++;
    }
</table>